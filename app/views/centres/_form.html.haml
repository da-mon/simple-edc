= form_for(@centre) do |f|
  - if @centre.errors.any?
    #error_explanation
      %h2
        = pluralize(@centre.errors.count, "error")
        prohibited this centre from being saved:
      %ul
        - @centre.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
