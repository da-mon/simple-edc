%p#notice= notice
%h1 Listing Centres
%table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @centres.each do |centre|
      %tr
        %td= centre.name
        %td= link_to 'Show', centre
        %td= link_to 'Edit', edit_centre_path(centre)
        %td= link_to 'Destroy', centre, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Centre', new_centre_path
