%p#notice= notice
%h1 Listing Studies
%table.table
  %thead
    %tr
      %th Name
      %th{:colspan => "3"}
  %tbody
    - @studies.each do |study|
      %tr
        %td= link_to study.name, edit_study_path(study)
        %td= link_to 'Remove', study, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Study', new_study_path
