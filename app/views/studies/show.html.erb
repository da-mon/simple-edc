<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @study.name %>
</p>
<table>
  <tr>
    <td>Forms</td>
    <td>
      <% @study.forms.each do |form| %>
          <%= link_to form.name, edit_study_form_path(@study, form) %>
      <% end %>
      <%= link_to 'New Form', new_study_form_path(@study) %>
    </td>
  </tr>
  <tr>
    <td>Events</td>
    <td>
      <% @study.events.each do |event| %>
          <%= event.name %>
      <% end %>
      <%= link_to 'New Event', new_study_event_path(@study) %>
    </td>
  </tr>
  <tr>
    <td>Users</td>
    <td>
      <% @study.study_users.each do |study_user| %>
          <%= study_user.user.name %>
      <% end %>
      <%= link_to 'New User', new_study_user_path(@study) %>
    </td>
  </tr>
</table>

<%= link_to 'Edit', edit_study_path(@study) %> |
<%= link_to 'Back to studies', studies_path %>