= form_for(@study) do |f|
  - if @study.errors.any?
    #error_explanation
      %h2
        = pluralize(@study.errors.count, "error")
        prohibited this study from being saved:
      %ul
        - @study.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .actions
    = f.submit
