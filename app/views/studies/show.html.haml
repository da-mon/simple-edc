%p
%p
  %strong
    = @study
  = link_to 'edit', edit_study_path(@study)
%table.table
  %tr
    %td{:style => 'width:10%;'}
      %strong
        Forms
    %td
      - @study.forms.each do |form|
        %strong
          = link_to form, form
        = link_to_delete(form)
        %br/
      = link_to add, new_study_form_path(@study)
  %tr
    %td
      %strong
        Events
    %td
      - @study.events.each do |event|
        %strong
          = link_to event, event
        = link_to_delete(event)
        %br/
      = link_to add, new_study_event_path(@study)
  %tr
    %td
      %strong
        Users
    %td
      - @study.users.each do |user|
        %strong
          = user.email
        %br/
      = link_to add, new_study_user_path(@study)

%strong
  Participants
%table.table
  %tr
    %td
      - @study.participants.each do |participant|
        %strong
          = link_to_participant(participant)
        %br/
      = link_to add, new_study_participant_path(@study)

= link_to 'Home', '/'
