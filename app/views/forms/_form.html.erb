<%= form_for([@study, @form]) do |f| %>
    <% if @form.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@form.errors.count, "error") %> prohibited this form from being saved:</h2>

          <ul>
            <% @form.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <fieldset>
      <legend>Fields</legend>
      <%= f.fields_for :fields do |fields_form| %>
          <fieldset>
            <div class="field">
              <%= fields_form.label :code %><br>
              <%= fields_form.text_field :code %>
            </div><div class="field">
              <%= fields_form.label :label %><br>
              <%= fields_form.text_field :label %>
            </div>
            <div class="field">
              <%= fields_form.label :type %><br>
              <%= fields_form.text_field :type %>
            </div>
          </fieldset>
      <% end %>
    </fieldset>

    <div class="actions">
      <%= f.submit %>
    </div>
<% end %>
