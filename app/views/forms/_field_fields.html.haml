.nested-fields
  = f.inputs do
    -#= f.inputs
    = f.input :code
    = f.input :label
    = f.input :field_type, :label => 'Type', :as => :select, :collection => Field.field_types.keys
    = f.semantic_fields_for :field_values do |fi|
      = render 'field_value_fields', f: fi
    .links
      = link_to_add_association 'add value', f, :field_values
    = f.input :required
    = link_to_remove_association 'remove field', f