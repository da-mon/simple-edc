!!!
%html
  %head
    %meta{:content => 'text/html; charset=UTF-8', 'http-equiv' => 'Content-Type'}/
    %meta{:content => 'width=device-width, initial-scale=1.0', :name => 'viewport'}/
    %title= content_for?(:title) ? yield(:title) : 'Simple EDC'
    %meta{:content => "#{content_for?(:description) ? yield(:description) : 'Simple EDC'}", :name => 'description'}/
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    %header
      = render 'layouts/navigation'
    %main{:role => 'main'}
      = breadcrumbs pretext: '', separator: '', autoroot: true, display_single_fragment: true, style: :bootstrap
      = render 'layouts/messages'
      = yield