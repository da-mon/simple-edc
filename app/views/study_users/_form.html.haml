= form_for(@study_user) do |f|
  - if @study_user.errors.any?
    #error_explanation
      %h2
        = pluralize(@study_user.errors.count, "error")
        prohibited this study_user from being saved:
      %ul
        - @study_user.errors.full_messages.each do |message|
          %li= message
  .actions
    = f.submit
